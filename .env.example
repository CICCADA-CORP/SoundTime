# ─── Database ───
DATABASE_URL=postgres://soundtime:soundtime@localhost:5432/soundtime
POSTGRES_USER=soundtime
POSTGRES_PASSWORD=soundtime_secure_password
POSTGRES_DB=soundtime

# ─── Application ───
# The domain where the app is hosted (used for P2P identity and links)
DOMAIN=localhost
HOST=0.0.0.0
PORT=8080

# Logging level (error, warn, info, debug, trace)
RUST_LOG=info,soundtime=debug

# ─── Security ───
# Must be generated with: openssl rand -base64 32
JWT_SECRET=change-me-to-a-secure-random-string-min-32-chars
# Token expiration in minutes (default: 15)
JWT_EXPIRATION=15
# Refresh token expiration in days (default: 7)
REFRESH_EXPIRATION=7

# ─── Storage ───
# Path to store uploaded audio files and waveforms
AUDIO_STORAGE_PATH=./data/music

# ─── Networking ───
# Iroh P2P listening port
P2P_PORT=11204

